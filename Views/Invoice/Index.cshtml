@model IEnumerable<CLDV_Framework.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h1>Customer Invoice</h1>

<table class="table">
    <tr>
        <th>
            Job Card No.
        </th>
        <th>
            Customer Details
        </th>
        <th>
            JobType
        </th>
        <th>
            Costs
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @item.Jobs.JobCardID
            </td>
            <td>
               @item.Customer.Name @item.Customer.Surname
            </td>
            <td>
                @item.JobType.JobType1
            </td>
            <td>
                @(String.Format("R {0:0.00}",item.JobType.Rate*item.Jobs.Days))
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Jobs.JobCardID })  
            </td>
        </tr>
    }

</table>
